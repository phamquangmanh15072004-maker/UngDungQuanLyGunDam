<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".MyOrderActivity">

    <!-- Toolbar để hiển thị tiêu đề và nút Back -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_my_orders"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView để hiển thị danh sách các đơn hàng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:listitem="@layout/item_order" />

    <!-- Bạn cũng có thể thêm một TextView ở đây để thông báo khi không có đơn hàng nào -->
    <TextView
        android:id="@+id/tv_no_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn chưa có đơn hàng nào."
        android:textSize="18sp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="50dp"/>

</LinearLayout>
