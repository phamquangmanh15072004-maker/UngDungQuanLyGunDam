<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Model3DViewerActivity">

    <!-- Toolbar để có nút Back (Giữ nguyên) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_3d_viewer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/back_ic"
        app:title="Mô hình 3D"
        app:titleTextColor="@android:color/white" />

    <!-- THAY THẾ Ở ĐÂY: Dùng WebView để hiển thị trang HTML chứa model 3D -->
    <WebView
        android:id="@+id/web_view_3d"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_3d_viewer" />

    <!-- Vòng xoay chờ (sẽ được điều khiển bởi code Java) -->
    <ProgressBar
        android:id="@+id/progress_bar_3d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>
