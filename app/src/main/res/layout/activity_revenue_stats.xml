<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/stats_background"
    tools:context=".RevenueStatsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/stats_card_background"
        app:elevation="2dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_stats"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Thống Kê"
            app:titleTextColor="@color/stats_text_primary" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Bộ lọc ngày tháng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lọc theo khoảng thời gian"
                android:textColor="@color/stats_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_start_date"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/stats_text_secondary"
                    tools:text="Từ: 17-11-2025"/>

                <Button
                    android:id="@+id/btn_end_date"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/stats_text_secondary"
                    tools:text="Đến: 17-11-2025"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_view_all"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Xem tất cả"/>

            <!-- Tiêu đề phần Thống kê doanh thu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Thống Kê Kinh Doanh"
                android:textColor="@color/stats_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Thẻ Tổng Doanh Thu -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/stats_card_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TỔNG DOANH THU"
                        android:textSize="14sp"
                        android:textColor="@color/stats_text_secondary"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_total_revenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/stats_revenue_color"
                        tools:text="15,500,000đ" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="16dp">

                <!-- Thẻ Đơn Hàng -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/stats_card_background">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ĐƠN HÀNG"
                            android:drawableStart="@drawable/icon_order"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/stats_text_secondary"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_total_orders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/stats_text_primary"
                            tools:text="125" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Thẻ Sản Phẩm Bán Ra -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/stats_card_background">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BÁN RA"
                            android:drawableStart="@drawable/ic_sold"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/stats_text_secondary"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_total_products_sold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/stats_text_primary"
                            tools:text="350" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- ===================================================================== -->
            <!-- ⭐ BẮT ĐẦU KHU VỰC THỐNG KÊ KHO HÀNG ĐÃ ĐƯỢC THAY ĐỔI THEO Ý BẠN ⭐ -->
            <!-- ===================================================================== -->

            <!-- Tiêu đề phần Thống kê Kho hàng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Thống Kê Kho Hàng"
                android:textColor="@color/stats_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <!-- Thẻ Loại Sản Phẩm -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/stats_card_background">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LOẠI SẢN PHẨM"
                            android:drawableStart="@drawable/iventory"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/stats_text_secondary"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_total_product_types"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/stats_text_primary"
                            tools:text="58" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Thẻ Tổng Số Sản Phẩm Trong Kho -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/stats_card_background">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TỔN KHO"
                            android:drawableStart="@drawable/ic_stock"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/stats_text_secondary"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_total_inventory_stock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/stats_text_primary"
                            tools:text="1.250" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>

            <!-- Thẻ Tổng Giá Trị Kho (Dài ra giống Tổng Doanh Thu) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/stats_card_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TỔNG GIÁ TRỊ KHO"
                        android:drawableStart="@drawable/ic_money"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:textColor="@color/stats_text_secondary"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_total_inventory_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/stats_inventory_color"
                        tools:text="250,000,000đ" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
