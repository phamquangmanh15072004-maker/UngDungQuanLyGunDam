<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bottom_sheet_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận đơn hàng"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/detail_primary_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giao đến"
        android:textStyle="bold"
        android:textColor="@color/detail_primary_text"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/layout_info_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_info_stroke"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_checkout_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0987654321"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="12dp"
            android:drawableTint="@color/detail_secondary_text"
            android:textColor="@color/detail_secondary_text"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_checkout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            tools:text="123 Đường ABC, Phường XYZ, Quận G, TP. HCM"
            android:drawableStart="@drawable/location_ic"
            android:drawablePadding="12dp"
            android:drawableTint="@color/detail_secondary_text"
            android:textColor="@color/detail_secondary_text"
            android:lineSpacingMultiplier="1.2"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_checkout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại"
                android:inputType="phone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_checkout_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ nhận hàng"
                android:inputType="textPostalAddress"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng cộng"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textColor="@color/detail_primary_text"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_checkout_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:text="318.000đ"
            android:textColor="@color/detail_accent"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_place_order"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Hoàn tất Đặt hàng"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/detail_accent"
        app:cornerRadius="16dp"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="@color/white"/>

</LinearLayout>
